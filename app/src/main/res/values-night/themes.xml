<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MobileDesignProject" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
<!--        <item name="color">@color/white</item>-->

        <!-- Secondary brand color. -->
        <item name="colorSecondary">#FFFFFF</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorSecondaryFixed">#FFFFFF</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorSecondaryContainer">#FFFFFF</item>
        <item name="itemTextColor">#FFFFFF</item>
        <item name="materialButtonOutlinedStyle">@color/white</item>
        <item name="materialButtonStyle">@color/purple_500</item>




        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.MobileDesignProject.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>



</resources>