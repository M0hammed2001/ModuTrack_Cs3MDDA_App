<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:orientation="vertical"> <!-- Set the orientation to vertical -->

            <EditText
                android:id="@+id/modulename_Edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Module Name"
                android:layout_marginBottom="1dp"
                android:textSize="20dp"/>

            <EditText
                android:id="@+id/assignmentsDue_Edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Assignment Due Date"
                android:layout_marginBottom="1dp"
                android:textSize="20dp"/>

            <EditText
                android:id="@+id/examDue_Edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Exam Date and time"
                android:layout_marginBottom="1dp"
                android:textSize="20dp"/>

            <EditText
                android:id="@+id/lessonDateTime_Edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Lesson Date and time"
                android:layout_marginBottom="1dp"
                android:textSize="20dp" />

        </LinearLayout>



</RelativeLayout>