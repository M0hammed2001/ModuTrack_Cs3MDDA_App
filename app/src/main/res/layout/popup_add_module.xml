<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="5"
    android:layout_margin="10dp"
    tools:context=".ui.Module.managedata.ModuleAddFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorSecondary">

        <Button
            android:id="@+id/buttonAddModule"
            android:layout_width="48sp"
            android:layout_height="48sp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="5sp"
            android:layout_marginEnd="-1sp"
            android:background="@drawable/baseline_thumb_up_24"
            android:contentDescription="@string/delete_module_button" />


        <!--        this is related to the Module-->
        <TextView
            android:id="@+id/ModuleCodeLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="57sp"
            android:text="@string/Module"
            android:labelFor="@id/ModuleCodeLabel"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/popupModuleCodeEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="45sp"
            android:layout_toEndOf="@id/ModuleCodeLabel"
            android:hint="@string/ModuleCode"
            android:minWidth="52sp"
            android:minHeight="52sp"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/ModuleNameLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4sp"
            android:layout_marginTop="57sp"
            android:layout_toEndOf="@id/popupModuleCodeEdit"
            android:text="module "
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/popupModuleNameEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="45sp"
            android:layout_toEndOf="@id/ModuleNameLabel"
            android:hint="Module Name"
            android:minWidth="52sp"
            android:minHeight="48sp"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:textSize="15sp" />


        <!--        this is related to the assignment-->
        <TextView
            android:id="@+id/AssignmentDate1Label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/popupModuleCodeEdit"
            android:layout_marginTop="14sp"
            android:minHeight="48sp"
            android:text="@string/date"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/popupAssignmentDateEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/popupModuleCodeEdit"
            android:layout_marginTop="1sp"
            android:layout_toEndOf="@id/AssignmentDate1Label"
            android:hint="@string/pickdate"
            android:minWidth="52sp"
            android:minHeight="48sp"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:textSize="15sp" />


        <TextView
            android:id="@+id/AssignmentName1Label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/popupModuleCodeEdit"
            android:layout_marginLeft="20sp"
            android:layout_marginTop="14sp"
            android:layout_toEndOf="@id/popupAssignmentDateEdit"
            android:minHeight="48sp"
            android:text="@string/nameLabel"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/popupAssignmentNameEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/popupModuleCodeEdit"
            android:layout_marginTop="1sp"
            android:layout_toEndOf="@id/AssignmentName1Label"
            android:hint="@string/assigment"
            android:minWidth="48sp"
            android:minHeight="48sp"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:textSize="15sp" />


        <!--        this is related to the Exam-->

        <TextView
            android:id="@+id/ExamDateLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/AssignmentDate1Label"
            android:minHeight="48sp"
            android:text="@string/date"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/popupExamDateEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/popupAssignmentDateEdit"
            android:layout_marginTop="1sp"
            android:layout_toEndOf="@id/ExamDateLabel"
            android:hint="@string/pickdate"
            android:minWidth="52sp"
            android:minHeight="48sp"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/ExamNameLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/AssignmentName1Label"
            android:layout_marginLeft="20sp"
            android:layout_marginTop="10sp"
            android:layout_toRightOf="@id/popupExamDateEdit"
            android:minHeight="48sp"
            android:text="@string/nameLabel"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/popupExamNameEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/popupAssignmentNameEdit"
            android:layout_marginTop="1sp"
            android:layout_toEndOf="@id/ExamNameLabel"
            android:hint="@string/exam"
            android:minWidth="48sp"
            android:minHeight="48sp"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:textSize="15sp" />

        <!--        Lecture Room-->

        <TextView
            android:id="@+id/LectureRoomLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/popupExamDateEdit"
            android:layout_marginTop="14sp"
            android:text="@string/lecture_room_label"
            android:textColor="@color/black"

            android:textSize="15sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/LectureRoomEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/popupExamDateEdit"
            android:layout_toEndOf="@id/LectureRoomLabel"
            android:hint="@string/lecture_room"
            android:minWidth="48sp"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:textSize="15sp" />

        <!--        Tutorial Room-->

        <TextView
            android:id="@+id/TutorialRoomLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/LectureRoomLabel"
            android:layout_marginTop="14sp"
            android:text="@string/tutorial_room_label"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/TutorialRoomEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/LectureRoomLabel"
            android:layout_marginTop="8sp"
            android:layout_toEndOf="@id/TutorialRoomLabel"

            android:hint="@string/toturorial_room"
            android:minWidth="48sp"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:textSize="15sp" />


    </RelativeLayout>


