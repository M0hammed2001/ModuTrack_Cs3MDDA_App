<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10sp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorSecondary">

        <Button
            android:id="@+id/ButtonDeleteModule"
            android:layout_width="36sp"
            android:layout_height="36sp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="2sp"
            android:layout_marginEnd="1sp"
            android:background="@drawable/trash"
            android:contentDescription="@string/delete_module_button" />

        <Button
            android:id="@+id/ButtonEdit"
            android:layout_width="42sp"
            android:layout_height="46sp"
            android:minWidth="48sp"
            android:minHeight="48sp"
            android:layout_marginRight="20dp"
            android:layout_toStartOf="@id/ButtonDeleteModule"
            android:background="@drawable/edit_24"
            android:contentDescription="@string/edit_module_button" />

        <!--        this is related to the Module-->
        <TextView
            android:id="@+id/ModuleCodeLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:text="@string/Module"
            android:textSize="18sp"
            android:minHeight="48sp"
            android:textStyle="bold"
            android:layout_marginTop="45sp"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/ModuleCodeText"
            android:minWidth="48sp"
            android:minHeight="48sp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_marginTop="45sp"
            android:textColor="@color/black"
            android:layout_toEndOf="@id/ModuleCodeLabel"
            android:layout_height="wrap_content"
            android:hint="@string/ModuleCode"/>
        <TextView
            android:id="@+id/ModuleNameLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="- "
            android:textSize="18sp"
            android:layout_marginStart="4sp"
            android:textStyle="bold"
            android:layout_marginTop="45sp"
            android:layout_toEndOf="@id/ModuleCodeText"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/ModuleNameText"
            android:minWidth="48sp"
            android:minHeight="48sp"
            android:textSize="18sp"
            android:layout_width="match_parent"
            android:layout_marginTop="45sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_toEndOf="@id/ModuleNameLabel"
            android:layout_height="wrap_content"
            android:hint="@string/module_code"/>



<!--        this is related to the assignment-->
        <TextView
            android:id="@+id/AssignmentDateLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:text="@string/date"
            android:textSize="15sp"
            android:minHeight="48sp"
            android:textStyle="bold"
            android:layout_below="@id/ModuleCodeText"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/AssignmentDateText"
            android:minWidth="48sp"
            android:minHeight="48sp"
            android:textSize="15sp"
            android:layout_marginStart="5sp"
            android:layout_width="wrap_content"
            android:layout_marginTop="1sp"
            android:textColor="@color/black"
            android:layout_below="@id/ModuleCodeText"
            android:layout_toEndOf="@id/AssignmentDateLabel"
            android:layout_height="wrap_content"
            android:hint="@string/pickdate"/>
        <TextView
            android:id="@+id/AssignmentNameLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/nameLabel"
            android:textSize="15sp"
            android:textStyle="bold"
            android:minHeight="48sp"
            android:layout_marginStart="20sp"
            android:layout_below="@id/ModuleCodeText"
            android:layout_toEndOf="@id/AssignmentDateText"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/AssignmentNameText"
            android:minWidth="48sp"
            android:minHeight="48sp"
            android:textSize="15sp"
            android:layout_marginStart="5sp"
            android:layout_width="match_parent"
            android:layout_marginTop="1sp"
            android:textColor="@color/black"
            android:layout_below="@id/ModuleCodeText"
            android:layout_toEndOf="@id/AssignmentNameLabel"
            android:layout_height="wrap_content"
            android:hint="@string/assigment"/>


        <!--        this is related to the Exam-->

        <TextView
            android:id="@+id/ExamDateLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:text="@string/date"
            android:textSize="15sp"
            android:minHeight="48sp"
            android:textStyle="bold"
            android:layout_below="@id/AssignmentDateLabel"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/ExamDateText"
            android:minWidth="48sp"
            android:minHeight="48sp"
            android:textSize="15sp"
            android:layout_marginStart="5sp"
            android:layout_width="wrap_content"
            android:layout_marginTop="1sp"

            android:textColor="@color/black"
            android:layout_below="@id/AssignmentDateText"
            android:layout_toEndOf="@id/ExamDateLabel"
            android:layout_height="wrap_content"
            android:hint="@string/pickdate"/>
        <TextView
            android:id="@+id/ExamNameLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/nameLabel"
            android:textSize="15sp"
            android:textStyle="bold"
            android:minHeight="48sp"
            android:layout_marginStart="20sp"
            android:layout_below="@id/AssignmentDateText"
            android:layout_toEndOf="@id/ExamDateText"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/ExamNameText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/AssignmentNameText"
            android:layout_marginTop="1sp"
            android:layout_toEndOf="@id/ExamNameLabel"
            android:hint="@string/exam"
            android:minWidth="48sp"
            android:layout_marginStart="5sp"
            android:minHeight="48sp"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <!--        Lecture Room-->

        <TextView
            android:id="@+id/LectureRoomLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:text="@string/lecture_room_label"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_below="@id/ExamDateText"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/LectureRoomText"
            android:minWidth="48sp"
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:textColor="@color/black"
            android:layout_marginStart="5sp"
            android:layout_below="@id/ExamDateText"
            android:layout_toEndOf="@id/LectureRoomLabel"
            android:layout_height="wrap_content"
            android:hint="@string/lecture_room"/>

        <!--        Tutorial Room-->

        <TextView
            android:id="@+id/TutorialRoomLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:text="@string/tutorial_room_label"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_marginTop="10sp"
            android:layout_below="@id/LectureRoomLabel"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/TutorialRoomText"
            android:minWidth="48sp"
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_marginTop="10sp"
            android:layout_marginStart="5sp"
            android:textColor="@color/black"
            android:layout_below="@id/LectureRoomLabel"
            android:layout_toEndOf="@id/TutorialRoomLabel"
            android:layout_height="wrap_content"
            android:hint="@string/toturorial_room"/>





        </RelativeLayout>

</RelativeLayout>
