<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10sp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorSecondary">

        <Button
            android:id="@+id/ButtonDeleteModule"
            android:layout_width="48sp"
            android:layout_height="48sp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="-4sp"
            android:layout_marginRight="-1sp"
            android:background="@drawable/delete_24"
            android:contentDescription="Delete Module button" />

        <Button
            android:id="@+id/ButtonEdit"
            android:layout_width="48sp"
            android:layout_height="48sp"
            android:minWidth="48sp"
            android:minHeight="48sp"
            android:layout_toLeftOf="@id/ButtonDeleteModule"
            android:background="@drawable/edit_24"
            android:contentDescription="edit Module button" />

        <!--        this is related to the Module-->
        <TextView
            android:id="@+id/ModuleCodeLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Code: "
            android:textSize="15sp"
            android:minHeight="48sp"
            android:textStyle="bold"
            android:layout_marginTop="45sp"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/ModuleCodeText"
            android:minWidth="48sp"
            android:minHeight="48sp"
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_marginTop="45sp"
            android:textColor="@color/black"
            android:layout_toRightOf="@id/ModuleCodeLabel"
            android:layout_height="wrap_content"
            android:hint="Code"/>
        <TextView
            android:id="@+id/ModuleNameLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name: "
            android:textSize="15sp"
            android:layout_marginLeft="4sp"
            android:minWidth="48sp"
            android:minHeight="48sp"
            android:textStyle="bold"
            android:layout_marginTop="45sp"
            android:layout_toRightOf="@id/ModuleCodeText"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/ModuleNameText"
            android:minWidth="48sp"
            android:minHeight="48sp"
            android:textSize="15sp"
            android:layout_width="match_parent"
            android:layout_marginTop="45sp"
            android:textColor="@color/black"
            android:layout_toRightOf="@id/ModuleNameLabel"
            android:layout_height="wrap_content"
            android:hint="Module Code"/>



<!--        this is related to the assignment-->
        <TextView
            android:id="@+id/AssignmentDateLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date: "
            android:textSize="15sp"
            android:minHeight="48sp"
            android:textStyle="bold"
            android:layout_below="@id/ModuleCodeText"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/AssignmentDateText"
            android:minWidth="48sp"
            android:minHeight="48sp"
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_marginTop="1sp"
            android:textColor="@color/black"
            android:layout_below="@id/ModuleCodeText"
            android:layout_toRightOf="@id/AssignmentDateLabel"
            android:layout_height="wrap_content"
            android:hint="As Date"
            android:inputType="datetime"/>
        <TextView
            android:id="@+id/AssignmentNameLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Name: "
            android:textSize="15sp"
            android:textStyle="bold"
            android:minHeight="48sp"
            android:layout_below="@id/ModuleCodeText"
            android:layout_toRightOf="@id/AssignmentDateText"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/AssignmentNameText"
            android:minWidth="48sp"
            android:minHeight="48sp"
            android:textSize="15sp"
            android:layout_width="match_parent"
            android:layout_marginTop="1sp"
            android:textColor="@color/black"
            android:layout_below="@id/ModuleCodeText"
            android:layout_toRightOf="@id/AssignmentNameLabel"
            android:layout_height="wrap_content"
            android:hint="Assigment"/>


        <!--        this is related to the Exam-->

        <TextView
            android:id="@+id/ExamDateLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date: "
            android:textSize="15sp"
            android:minHeight="48sp"
            android:textStyle="bold"
            android:layout_below="@id/AssignmentDateLabel"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/ExamDateText"
            android:minWidth="48sp"
            android:minHeight="48sp"
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_marginTop="1sp"
            android:textColor="@color/black"
            android:layout_below="@id/AssignmentDateText"
            android:layout_toRightOf="@id/ExamDateLabel"
            android:layout_height="wrap_content"
            android:hint="Ex Date"/>
        <TextView
            android:id="@+id/ExamNameLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name: "
            android:textSize="15sp"
            android:textStyle="bold"
            android:minHeight="48sp"
            android:layout_marginLeft="4sp"
            android:layout_below="@id/AssignmentDateText"
            android:layout_toRightOf="@id/ExamDateText"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/ExamNameText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/AssignmentNameText"
            android:layout_marginTop="1sp"
            android:layout_toRightOf="@id/ExamNameLabel"
            android:hint="Exam "
            android:minWidth="48sp"
            android:minHeight="48sp"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <!--        Lecture Room-->

        <TextView
            android:id="@+id/LectureRoomLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lecture Room: "
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_below="@id/ExamDateText"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/LectureRoomText"
            android:minWidth="48sp"
            android:minHeight="48sp"
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:textColor="@color/black"
            android:layout_below="@id/ExamDateText"
            android:layout_toRightOf="@id/LectureRoomLabel"
            android:layout_height="wrap_content"
            android:hint="Lecture Room E.g MB"/>

        <!--        Tutorial Room-->

        <TextView
            android:id="@+id/TutorialRoomLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tutorial Room: "
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_marginTop="10sp"
            android:layout_below="@id/LectureRoomLabel"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/TutorialRoomText"
            android:minWidth="48sp"
            android:minHeight="48sp"
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_marginTop="10sp"
            android:textColor="@color/black"
            android:layout_below="@id/LectureRoomLabel"
            android:layout_toRightOf="@id/TutorialRoomLabel"
            android:layout_height="wrap_content"
            android:hint="Toturorial Room E.g MB"/>





        </RelativeLayout>

</RelativeLayout>
