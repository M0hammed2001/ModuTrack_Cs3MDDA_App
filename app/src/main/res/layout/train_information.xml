<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="6dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">
        <Button
            android:id="@+id/ButtonTrainInformation"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/baseline_info_24"
            android:contentDescription="More information about the Train" />

        <TextView
            android:id="@+id/traininformation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ButtonTrainInformation"
            android:hint="Module Information item"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />
    </RelativeLayout>



</RelativeLayout>
