<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"> <!-- Set the orientation to vertical -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/ModulenameField"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Module:"
                        android:textColor="@android:color/holo_purple"
                        android:textFontWeight="1000"
                        android:textSize="20dp"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/AssignmentsNameField"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Assignment:"
                        android:textColor="@android:color/holo_purple"
                        android:textFontWeight="1000"
                        android:textSize="15sp"
                        android:layout_marginEnd="20sp"/>

                    <TextView
                        android:id="@+id/AssignmentsDateField"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Date:"
                        android:textColor="@color/red"
                        android:textFontWeight="1000"
                        android:textSize="15sp"/>



                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/ExamNameField"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Exam:"
                        android:textColor="@android:color/holo_purple"
                        android:textFontWeight="1000"
                        android:textSize="15sp"
                        android:layout_marginEnd="20sp"/>
                    <TextView
                        android:id="@+id/ExamDateField"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Date:"
                        android:textColor="@color/red"
                        android:textFontWeight="1000"
                        android:textSize="15sp"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/LessonDateTimeField"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Lesson:"
                        android:textColor="@android:color/holo_purple"
                        android:textFontWeight="1000"
                        android:textSize="15sp"
                        android:layout_marginEnd="20sp"/>

                    <TextView
                        android:id="@+id/RoomField"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Room:"
                        android:textColor="@android:color/holo_purple"
                        android:textFontWeight="1000"
                        android:textSize="15sp"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <Button
                        android:id="@+id/button_delete"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:text="Delete"
                        android:layout_marginEnd="30sp"/>
                    <Button
                        android:id="@+id/button_Edit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentLeft="true"
                        android:text="Edit" />

                </LinearLayout>

            </LinearLayout>


        </androidx.cardview.widget.CardView>

    </RelativeLayout>

</RelativeLayout>
