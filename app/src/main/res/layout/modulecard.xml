<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"> <!-- Set the orientation to vertical -->

                <TextView
                    android:id="@+id/ModulenameField"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Module name"
                    android:textColor="@android:color/holo_purple"
                    android:textFontWeight="1000"
                    android:textSize="30dp"/>

                <TextView
                    android:id="@+id/AssignmentsDueField"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Assignment DueDate"
                    android:textColor="@android:color/holo_purple"
                    android:textFontWeight="1000"
                    android:textSize="30dp"/>

                <TextView
                    android:id="@+id/ExamDueField"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Exam date"
                    android:textColor="@android:color/holo_purple"
                    android:textFontWeight="1000"
                    android:textSize="30dp"/>

                <TextView
                    android:id="@+id/LessonDateTimeField"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lesson Day's And time"
                    android:textColor="@android:color/holo_purple"
                    android:textFontWeight="1000"
                    android:textSize="30dp"/>

                <Button
                    android:id="@+id/button_delete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:text="Delete" />
            </LinearLayout>


        </androidx.cardview.widget.CardView>

    </RelativeLayout>

</RelativeLayout>
