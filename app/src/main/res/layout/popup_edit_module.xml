<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="5"
    android:layout_margin="10dp"
    tools:context=".ui.Module.managedata.ModuleEditFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorSecondary">


        <Button
            android:id="@+id/buttonChangeModule"
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="5sp"
            android:layout_marginEnd="-1sp"
            android:background="@drawable/confirm_24"
            android:contentDescription="@string/delete_module_button" />

        <Button
            android:id="@+id/ButttonEditCancel"
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:layout_toLeftOf="@id/buttonChangeModule"
            android:layout_marginTop="5sp"
            android:layout_marginEnd="15sp"
            android:background="@drawable/cancel_24"
            android:contentDescription="@string/delete_module_button" />



        <!--        this is related to the Module-->
        <TextView
            android:id="@+id/ModuleCodeLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:text="@string/Module"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="55sp"
            android:textColor="@color/black"/>

        <EditText
            android:id="@+id/ModuleCodeText"
            android:minWidth="48sp"
            android:minHeight="48sp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_marginTop="45sp"
            android:textColor="@color/black"
            android:layout_toEndOf="@id/ModuleCodeLabel"
            android:layout_height="wrap_content"
            android:textColorHint="@color/black"
            android:hint="@string/ModuleCode"/>
        <TextView
            android:id="@+id/ModuleNameLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="- "
            android:textSize="18sp"
            android:layout_marginStart="4sp"
            android:textStyle="bold"
            android:layout_marginTop="55sp"
            android:layout_toEndOf="@id/ModuleCodeText"
            android:textColor="@color/black"/>

        <EditText
            android:id="@+id/ModuleNameText"
            android:minWidth="48sp"
            android:minHeight="48sp"
            android:textSize="18sp"
            android:layout_width="match_parent"
            android:layout_marginTop="45sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_toEndOf="@id/ModuleNameLabel"
            android:layout_height="wrap_content"
            android:textColorHint="@color/black"
            android:hint="@string/ModuleName"/>


        <TextView
            android:id="@+id/Assingment1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:text="@string/Assigment1"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_below="@id/ModuleCodeText"
            android:textColor="@color/red"/>
        <!--        this is related to the assignment-->
        <TextView
            android:id="@+id/AssignmentDate1Label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/Assingment1"
            android:layout_marginLeft="4dp"
            android:text="@string/date"
            android:minHeight="48sp"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/AssignmentDate1Text"
            android:minWidth="48sp"
            android:minHeight="48sp"
            android:textSize="15sp"
            android:layout_marginStart="5sp"
            android:layout_width="wrap_content"
            android:layout_marginTop="1sp"
            android:textColor="@color/black"
            android:layout_below="@id/Assingment1"
            android:layout_toEndOf="@id/AssignmentDate1Label"
            android:layout_height="wrap_content"
            android:hint="@string/pickdate"/>
        <TextView
            android:id="@+id/AssignmentName1Label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/nameLabel"
            android:textSize="15sp"
            android:textStyle="bold"
            android:minHeight="48sp"
            android:layout_marginStart="20sp"
            android:layout_below="@id/Assingment1"
            android:layout_toEndOf="@id/AssignmentDate1Text"
            android:textColor="@color/black"/>

        <EditText
            android:id="@+id/AssignmentName1Text"
            android:minWidth="48sp"
            android:minHeight="48sp"
            android:textSize="15sp"
            android:layout_marginStart="5sp"
            android:layout_width="match_parent"
            android:layout_marginTop="-10sp"
            android:textColor="@color/black"
            android:layout_below="@id/Assingment1"
            android:layout_toEndOf="@id/AssignmentName1Label"
            android:layout_height="wrap_content"
            android:textColorHint="@color/black"
            android:hint="@string/assigment"/>


        <TextView
            android:id="@+id/Assingment2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:text="@string/Assigment2"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_below="@id/AssignmentDate1Label"
            android:textColor="@color/red"/>

        <TextView
            android:id="@+id/AssignmentDate2Label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/Assingment2"
            android:layout_marginLeft="4dp"
            android:text="@string/date"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/AssignmentDate2Text"
            android:minWidth="48sp"
            android:minHeight="48sp"
            android:textSize="15sp"
            android:layout_marginStart="5sp"
            android:layout_width="wrap_content"
            android:layout_marginTop="1sp"
            android:textColor="@color/black"
            android:layout_below="@id/Assingment2"
            android:layout_toEndOf="@id/AssignmentDate1Label"
            android:layout_height="wrap_content"
            android:hint="@string/pickdate"/>
        <TextView
            android:id="@+id/AssignmentName2Label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/nameLabel"
            android:textSize="15sp"
            android:textStyle="bold"
            android:minHeight="48sp"
            android:layout_marginStart="20sp"
            android:layout_below="@id/Assingment2"
            android:layout_toEndOf="@id/AssignmentDate1Text"
            android:textColor="@color/black"/>

        <EditText
            android:id="@+id/AssignmentName2Text"
            android:minWidth="48sp"
            android:minHeight="48sp"
            android:textSize="15sp"
            android:layout_marginStart="5sp"
            android:layout_width="match_parent"
            android:layout_marginTop="-10sp"
            android:textColor="@color/black"
            android:layout_below="@id/Assingment2"
            android:layout_toEndOf="@id/AssignmentName1Label"
            android:layout_height="wrap_content"
            android:textColorHint="@color/black"
            android:hint="@string/assigment"/>

        <!--        this is related to the Exam-->
        <TextView
            android:id="@+id/Exam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20sp"
            android:layout_marginLeft="4dp"
            android:text="@string/Exam"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_below="@id/AssignmentDate2Label"
            android:textColor="@color/red"/>

        <TextView
            android:id="@+id/ExamDateLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:text="@string/date"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_below="@id/Exam"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/ExamDateText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/Exam"
            android:layout_centerInParent="true"
            android:layout_marginStart="5sp"
            android:layout_marginTop="1sp"
            android:layout_toEndOf="@id/ExamDateLabel"
            android:hint="@string/pickdate"
            android:minWidth="48sp"
            android:minHeight="48sp"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="15sp" />
        <TextView
            android:id="@+id/ExamNameLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/nameLabel"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_marginTop="15sp"
            android:layout_marginStart="20sp"
            android:layout_below="@id/Exam"
            android:layout_toEndOf="@id/ExamDateText"
            android:textColor="@color/black"/>

        <EditText
            android:id="@+id/ExamNameText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/Exam"
            android:layout_marginTop="1sp"
            android:layout_toEndOf="@id/ExamNameLabel"
            android:hint="@string/exam"
            android:minWidth="48sp"
            android:layout_marginStart="5sp"
            android:minHeight="48sp"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:textSize="15sp" />

        <!--        Lecture Room-->

        <TextView
            android:id="@+id/LectureRoomLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:layout_marginLeft="4dp"
            android:text="@string/lecture_room_label"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_below="@id/ExamDateText"
            android:textColor="@color/black"/>

        <EditText
            android:id="@+id/LectureRoomText"
            android:minWidth="48sp"
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:layout_marginStart="5sp"
            android:layout_below="@id/ExamDateText"
            android:layout_toEndOf="@id/LectureRoomLabel"
            android:layout_height="wrap_content"
            android:hint="@string/lecture_room"/>

        <!--        Tutorial Room-->

        <TextView
            android:id="@+id/TutorialRoomLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:text="@string/tutorial_room_label"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_marginTop="10sp"
            android:layout_below="@id/LectureRoomText"
            android:textColor="@color/black"/>

        <EditText
            android:id="@+id/TutorialRoomText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/LectureRoomText"
            android:layout_marginStart="6dp"
            android:layout_toEndOf="@id/TutorialRoomLabel"
            android:textColorHint="@color/black"
            android:hint="@string/toturorial_room"
            android:minWidth="48sp"
            android:textColor="@color/black"
            android:textSize="15sp" />

    </RelativeLayout>

</RelativeLayout>

