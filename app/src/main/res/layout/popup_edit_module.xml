<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="5"
    android:layout_margin="10dp"
    tools:context=".ui.Module.managedata.ModuleAddFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorSecondary">


        <Button
            android:id="@+id/buttonChangeModule"
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="5sp"
            android:layout_marginEnd="-1sp"
            android:background="@drawable/confirm_24"
            android:contentDescription="@string/delete_module_button" />

        <Button
            android:id="@+id/ButttonEditCancel"
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:layout_toLeftOf="@id/buttonChangeModule"
            android:layout_marginTop="5sp"
            android:layout_marginEnd="15sp"
            android:background="@drawable/cancel_24"
            android:contentDescription="@string/delete_module_button" />



        <!--        this is related to the Module-->
        <TextView
            android:id="@+id/ModuleCodeLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Module"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_marginTop="57sp"
            android:textColor="@color/black"/>

        <EditText
            android:id="@+id/popupModuleEditCode"
            android:minWidth="48sp"
            android:minHeight="48sp"
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_marginTop="45sp"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:layout_toEndOf="@id/ModuleCodeLabel"
            android:layout_height="wrap_content"
            android:hint="@string/ModuleCode"/>
        <TextView
            android:id="@+id/ModuleNameLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="module "
            android:textSize="15sp"
            android:layout_marginStart="4sp"
            android:textStyle="bold"
            android:layout_marginTop="57sp"
            android:layout_toEndOf="@id/popupModuleEditCode"
            android:textColor="@color/black"/>

        <EditText
            android:id="@+id/popupModuleEditName"
            android:minWidth="48sp"
            android:minHeight="48sp"
            android:textSize="15sp"
            android:layout_width="match_parent"
            android:layout_marginTop="45sp"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:layout_toEndOf="@id/ModuleNameLabel"
            android:layout_height="wrap_content"
            android:hint="Module Name"/>



        <!--        this is related to the assignment-->
        <TextView
            android:id="@+id/AssignmentDate1Label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/date"
            android:textSize="15sp"
            android:minHeight="48sp"
            android:textStyle="bold"
            android:layout_marginTop="14sp"
            android:layout_below="@id/popupModuleEditCode"
            android:textColor="@color/black"/>

        <EditText
            android:id="@+id/popupAssignmentEditDate"
            android:minWidth="48sp"
            android:minHeight="48sp"
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_marginTop="1sp"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:layout_below="@id/popupModuleEditCode"
            android:layout_toEndOf="@id/AssignmentDate1Label"
            android:layout_height="wrap_content"
            android:hint="@string/pickdate"/>
        <TextView
            android:id="@+id/AssignmentName1Label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/nameLabel"
            android:textSize="15sp"
            android:layout_marginLeft="20sp"
            android:textStyle="bold"
            android:minHeight="48sp"
            android:layout_marginTop="14sp"
            android:layout_below="@id/popupModuleEditCode"
            android:layout_toEndOf="@id/popupAssignmentEditDate"
            android:textColor="@color/black"/>

        <EditText
            android:id="@+id/popupAssignmentEditName"
            android:minWidth="48sp"
            android:minHeight="48sp"
            android:textSize="15sp"
            android:layout_width="match_parent"
            android:layout_marginTop="1sp"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:layout_below="@id/popupModuleEditCode"
            android:layout_toEndOf="@id/AssignmentName1Label"
            android:layout_height="wrap_content"
            android:hint="@string/assigment"/>


        <!--        this is related to the Exam-->

        <TextView
            android:id="@+id/ExamDateLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/date"
            android:textSize="15sp"
            android:minHeight="48sp"
            android:textStyle="bold"
            android:layout_below="@id/AssignmentDate1Label"
            android:textColor="@color/black"/>

        <EditText
            android:id="@+id/popupExamEditDate"
            android:minWidth="48sp"
            android:minHeight="48sp"
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_marginTop="1sp"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:layout_below="@id/popupAssignmentEditDate"
            android:layout_toEndOf="@id/ExamDateLabel"
            android:layout_height="wrap_content"
            android:hint="@string/pickdate"/>
        <TextView
            android:id="@+id/ExamNameLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/nameLabel"
            android:textSize="15sp"
            android:textStyle="bold"
            android:minHeight="48sp"
            android:layout_marginLeft="20sp"
            android:layout_marginTop="10sp"
            android:layout_below="@id/AssignmentName1Label"
            android:layout_toRightOf="@id/popupExamEditDate"
            android:textColor="@color/black"/>

        <EditText
            android:id="@+id/popupExamEditName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/popupAssignmentEditName"
            android:layout_marginTop="1sp"
            android:hint="@string/exam"
            android:textColorHint="@color/black"
            android:minWidth="48sp"
            android:minHeight="48sp"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:layout_toEndOf="@id/ExamNameLabel"/>

        <!--        Lecture Room-->

        <TextView
            android:id="@+id/LectureRoomLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lecture_room_label"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_marginTop="14sp"

            android:layout_below="@id/popupExamEditDate"
            android:textColor="@color/black"/>

        <EditText
            android:id="@+id/LectureEditRoom"
            android:minWidth="48sp"
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:layout_below="@id/popupExamEditDate"
            android:layout_toEndOf="@id/LectureRoomLabel"
            android:layout_height="wrap_content"
            android:hint="@string/lecture_room"/>

        <!--        Tutorial Room-->

        <TextView
            android:id="@+id/TutorialRoomLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tutorial_room_label"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_marginTop="14sp"
            android:layout_below="@id/LectureRoomLabel"
            android:textColor="@color/black"/>

        <EditText
            android:id="@+id/TutorialEditRoom"
            android:minWidth="48sp"
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:textColor="@color/black"
            android:layout_marginTop="8sp"

            android:layout_below="@id/LectureRoomLabel"
            android:layout_toEndOf="@id/TutorialRoomLabel"
            android:layout_height="wrap_content"
            android:textColorHint="@color/black"
            android:hint="@string/toturorial_room"/>
        
    </RelativeLayout>

</RelativeLayout>

